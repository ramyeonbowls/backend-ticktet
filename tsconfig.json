{
  "compilerOptions": {
    // üåê Environment setup & modern JS features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // ‚öôÔ∏è Bun-friendly bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // ‚úÖ Best practices & strict checks
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // ‚ö†Ô∏è Optional strictness flags (set false by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // üì¶ Tambahan penting agar bcryptjs.d.ts terbaca
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },

  // üß© Sertakan semua file TypeScript di src/
  "include": ["src/**/*.ts"]
}
